[user]
	name = TheOnly92
	email = me@theonly92.com
[core]
	editor = vim
[credential]
	helper = cache --timeout=2592000
[push]
	default = simple
[alias]
	a = add
	b = branch
	c = commit
	d = diff
	f = fetch
	g = grep
	l = log
	m = merge
	o = checkout
	p = pull
	r = remote
	s = status
	w = whatchanged

	aa = add --all
	ap = add --patch
	au = add --update

	be = branch --edit-description
	bm = branch --merged
	bnm = branch --no-merged

	ca = commit --amend
	can = commit --amend --no-edit
	cam = commit --amend --message
	ci = commit --interactive
	cm = commit --message

	co = checkout
	cp = cherry-pick
	cp-nx = cherry-pick --no-commit -x

	dc = diff --cached
	ds = diff --staged
	dw = diff --word-diff

	cleanest = clean -ffdx

	pf = pull --ff-only
	pr = pull --rebase

	rb = rebase
	rbc = rebase --continue
	rbs = rebase --skip
	rbi = rebase --interactive @{upstream}

	rr = remote
	rrs = remote show
	rru = remote update
	rrp = remote prune

	rv = revert
	sb = show-branch

	sm = submodule
	smu = submodule update
	smui = submodule update --init
	smuir = submodule update --init --recursive

	ss = status --short
	ssb = status --short --branch

	lasttag = describe --tags --abbrev=0
	lasttagged = !git describe --tags `git rev-list --tags --max-count=1`

	tags = tag -n1 --list

	head = log -n1

	rebase-branch = !"git rebase --interactive `git merge-base master HEAD`"

	cloner = clone --recursive
	save = stash save
	pop = stash pop

	reset-commit = reset --soft HEAD~1
	reset-commit-hard = reset --hard HEAD~1
	reset-commit-clean = !git reset --hard HEAD~1 && git clean -fd
	reset-to-pristine = !git reset --hard && git clean -ffdx
	reset-to-upstream = !git reset --hard $(git upstream-name)

	publish = !"git push --set-upstream origin $(git branch-name)"
	unpublish = !"git push origin :$(git branch-name)"

	branches = branch -a
	stashes = stash list

	branch-name = rev-parse --abbrev-ref HEAD
	upstream-name = !git for-each-ref --format='%(upstream:short)' $(git symbolic-ref -q HEAD)

	repacker = repack -a -d -f --depth=300 --window=300 --window-memory=1g
	optimize = !git pruner; git repacker; git prune-packed
[diff]
	tool = meld
